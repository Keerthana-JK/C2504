<Window x:Name="LinearGradient1" x:Class="WpfExample2.LinearGradient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="Linear Gradient" Height="450" Width="800" Closing="LinearGradient1_Closing">
    <Canvas>
		<Rectangle Height="159" Canvas.Left="116" Stroke="Black" Canvas.Top="37" Width="260">
			<Rectangle.Fill>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="Gray" Offset="0" />
					<GradientStop Color="AliceBlue" Offset="1" />
					<GradientStop Color="CadetBlue" Offset="0" />
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Ellipse Height="179" Canvas.Left="497" Stroke="Black" Canvas.Top="100" Width="179">
			<Ellipse.Fill>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="RosyBrown" Offset="1.5" />
					<GradientStop Color="Coral" Offset="0" />
					<GradientStop Color="DeepPink" Offset="1" />
				</LinearGradientBrush>
			</Ellipse.Fill>
		</Ellipse>

	</Canvas>
</Window>
