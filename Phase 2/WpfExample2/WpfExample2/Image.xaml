<Window x:Name="ImageBrush" x:Class="WpfExample2.Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="Image Brush" Height="450" Width="800" Closing="ImageBrush_Closing">
	<Canvas>
		<Rectangle Height="305" Canvas.Left="171" Stroke="Black" Canvas.Top="65" Width="515" HorizontalAlignment="Left" VerticalAlignment="Top">
			<Rectangle.Fill>
				<ImageBrush ImageSource="/peacock.jpg" Stretch="Uniform" Opacity="0.5"/>
			</Rectangle.Fill>
		</Rectangle>
		<Ellipse Height="179" Canvas.Left="257" Stroke="Black" Canvas.Top="99" Width="179">
			<Ellipse.Fill>
				<ImageBrush ImageSource="/duck.jpg" Stretch="UniformToFill" Opacity="0.9"/>
			</Ellipse.Fill>
		</Ellipse>
	</Canvas>
</Window>
