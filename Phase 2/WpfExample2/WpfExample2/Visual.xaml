<Window x:Name="VisualBrush" x:Class="WpfExample2.Visual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="Visual Brush" Height="450" Width="800" Closing="VisualBrush_Closing">
	<Canvas>
		<Rectangle Height="177" Canvas.Left="61" Stroke="Black" Canvas.Top="37" Width="315">
			<Rectangle.Fill>
				<VisualBrush>
					<VisualBrush.Visual>
						<TextBlock Text="Hello World" Foreground="Red" FontSize="30"/>
					</VisualBrush.Visual>
				</VisualBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Ellipse Height="228" Canvas.Left="497" Stroke="Black" Canvas.Top="100" Width="228">
			<Ellipse.Fill>
				<VisualBrush>
					<VisualBrush.Visual>
						<TextBlock Text="People" Foreground="Red" FontSize="30"/>
					</VisualBrush.Visual>
				</VisualBrush>
			</Ellipse.Fill>
		</Ellipse>
	</Canvas>
</Window>
