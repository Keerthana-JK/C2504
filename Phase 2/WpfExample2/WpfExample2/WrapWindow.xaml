<Window x:Class="WpfExample2.WrapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="Wrap Window" Height="450" Width="800" Closing="Window_Closing">
	<Canvas>
		<WrapPanel>
			<Button Content="Button 1" Width="100" Height="120"/>
			<Button Content="Button 2" Width="100"/>
			<Button Content="Button 3" Width="100"/>
			<Button Content="Button 4" Width="100"/>
		</WrapPanel>

		<WrapPanel Orientation="Vertical" HorizontalAlignment="Center" 
			Canvas.Top="20" Canvas.Left="500"
			Width="100" VerticalAlignment="Top" Height="265">
			<Button Content="Button 1" Height="120"/>
			<Button Content="Button 2" Height="120" />
			<Button Content="Button 3" Height="120"/>
			<Button Content="Button 4" Height="120"/>
		</WrapPanel>
	</Canvas>
</Window>
