<Window x:Name="SolidColorBrush" x:Class="WpfExample2.SolidColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample2"
        mc:Ignorable="d"
        Title="Solid Color Brush" Height="450" Width="800" Closing="SolidColorBrush_Closing">
	<Canvas>
		<Rectangle Height="159" Canvas.Left="116" Stroke="Black" Canvas.Top="37" Width="260">
			<Rectangle.Fill>
				<SolidColorBrush Color="Aqua"/>
			</Rectangle.Fill>
		</Rectangle>
		<Ellipse Height="179" Canvas.Left="497" Stroke="Black" Canvas.Top="100" Width="179">
			<Ellipse.Fill>
				<SolidColorBrush Color="DarkMagenta"/>
			</Ellipse.Fill>
		</Ellipse>
	</Canvas>
</Window>
