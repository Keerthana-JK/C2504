<Window x:Class="WpfExample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
	<Canvas Margin="2,0,-2,0" >
		<Border BorderBrush="OrangeRed" Background="MediumAquamarine"  BorderThickness="2"
		  Canvas.Left="330"
		  Canvas.Top="60">
			<TextBlock x:Name="lblCount" Text="0" TextAlignment="Center" TextWrapping="Wrap" Padding="10" FontSize="22" Width="155" Height="50"/>

		</Border>
		<Button x:Name="btnPlus" Content="+" 
				Height="72" Canvas.Left="253" Canvas.Top="184" Width="110" 
				FontSize="36" FontWeight="Bold" 
				HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnPlus_Click"/>
		<Button x:Name="btnMinus" Content="-" 
				Height="72" Canvas.Left="441" Canvas.Top="184" Width="111" 
				FontSize="36" FontWeight="Bold" 
				HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnMinus_Click"/>
	</Canvas>
</Window>
