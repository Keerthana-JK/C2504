<Window x:Class="EditorWindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorWindowApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
	<Grid>
		<Button x:Name="btnOpen" Content="Open..." HorizontalAlignment="Left" Height="46" Margin="58,82,0,0" VerticalAlignment="Top" Width="114" Click="btnOpen_Click"/>
		<Button x:Name="btnSave" Content="Save..." HorizontalAlignment="Left" Height="46" Margin="202,82,0,0" VerticalAlignment="Top" Width="114" Click="btnSave_Click"/>
		<Button x:Name="btnFont" Content="Font..." HorizontalAlignment="Center" Height="46" Margin="0,82,0,0" VerticalAlignment="Top" Width="114" Click="btnFont_Click"/>
		<Button x:Name="btnColor" Content="Color..." HorizontalAlignment="Left" Height="46" Margin="488,82,0,0" VerticalAlignment="Top" Width="114" Click="btnColor_Click"/>
		<TextBox x:Name="txtEditor" AcceptsReturn="True" HorizontalAlignment="Left" Height="124" Margin="58,162,0,0" TextWrapping="Wrap" Text="C# and WPF" VerticalAlignment="Top" Width="553"/>

	</Grid>
</Window>
